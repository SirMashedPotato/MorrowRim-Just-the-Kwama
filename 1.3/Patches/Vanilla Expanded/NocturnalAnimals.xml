<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<!-- Now part of VE Framework -->
			<li>Vanilla Expanded Framework</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
	
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MorrowRim_KwamaScrib"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Crepuscular</bodyClock>
						</li>
					</value>			
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MorrowRim_KwamaForager"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Crepuscular</bodyClock>
						</li>
					</value>			
				</li>
		
			</operations>
		</match>
	</Operation>
		
</Patch>

